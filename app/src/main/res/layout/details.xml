<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="20dp"
    android:paddingHorizontal="35dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/slider"
        android:layout_width="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="5dp"
        android:backgroundTint="@color/darkBrown"
        android:background="@drawable/edit_shape"
        />

    <LinearLayout
        android:id="@+id/title_parent"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/slider"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/inter_bold"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Title"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/title"
            android:fontFamily="@font/inter_regular"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Title"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/size_parent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/title_parent"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/inter_bold"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/size"
            android:fontFamily="@font/inter_regular"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80MB"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/duration_parent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/size_parent"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/inter_bold"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/duration"
            android:fontFamily="@font/inter_regular"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/location_parent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/duration_parent"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/inter_bold"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/location"
            android:fontFamily="@font/inter_regular"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/sdcard/0/pictures"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/date_parent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/location_parent"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/inter_bold"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Created"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/date"
            android:fontFamily="@font/inter_regular"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Jun 2004"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>